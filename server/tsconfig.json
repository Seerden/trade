{
	"compilerOptions": {
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ES2021",
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"lib": ["ES2021"],
		"incremental": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"types": ["jest", "node"],
		"baseUrl": ".",
		"paths": {
			"helpers/*": ["./helpers/*"],
			"types/*": ["./types/*"]
		}
	},
	"ts-node": { "files": true },
	"exclude": ["./node_modules", "node_modules"]
}
